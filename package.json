{
  "name": "Upcount",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "electron": "electron app/dist/main",
    "electron:main": "electron-webpack dev",
    "electron:renderer": "APP_ROOT=src/renderer umi dev",
    "electron:package": "yarn umi:build && yarn webpack:main:production && electron-builder --dir",
    "electron:dist": "electron-builder",
    "umi:start": "APP_ROOT=src/renderer umi dev",
    "umi:build": "APP_ROOT=src/renderer umi build",
    "umi:test": "APP_ROOT=src/renderer umi test",
    "lint": "eslint --ext .js src mock tests",
    "precommit": "lint-staged",
    "webpack:main:development": "NODE_ENV=development webpack --config ./webpack/development.config.js",
    "webpack:main:production": "NODE_ENV=production webpack --config ./webpack/production.config.js"
  },
  "dependencies": {
    "antd": "^3.19.6",
    "countries-list": "^2.4.2",
    "currency-symbol-map": "^4.0.4",
    "currency.js": "^1.2.2",
    "libphonenumber-js": "^1.7.19",
    "pouchdb": "^7.1.1",
    "pouchdb-find": "^7.1.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-frame-component": "^4.1.0",
    "recompose": "^0.30.0",
    "redux-form": "^8.2.4",
    "styled-components": "^4.3.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "electron": "^4.2.4",
    "electron-builder": "^20.39.0",
    "electron-debug": "^2.2.0",
    "electron-webpack": "^2.6.2",
    "eslint": "^5.16.0",
    "eslint-config-umi": "^1.5.0",
    "eslint-plugin-flowtype": "^3.10.3",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^2.0.0",
    "lint-staged": "^8.1.5",
    "node-abi": "^2.8.0",
    "react-test-renderer": "^16.8.6",
    "umi": "^2.8.3",
    "umi-plugin-react": "^1.9.1"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "build": {
    "appId": "com.upcount.app",
    "productName": "Upcount"
  }
}
